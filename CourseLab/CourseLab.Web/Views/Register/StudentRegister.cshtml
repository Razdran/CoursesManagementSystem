@model CourseLab.Web.Models.StudentRegisterModel

@{
    ViewData["Title"] = "StudentRegister";
}

<h2>StudentRegister</h2>

<h4>StudentRegisterModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="StudentRegister">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Group" class="control-label"></label>
                <select asp-for="Group" class="form-control">
                    <option>@CourseLab.Data.UserManagement.GroupEnum.A1</option>
                    <option>@CourseLab.Data.UserManagement.GroupEnum.A2</option>
                    <option>@CourseLab.Data.UserManagement.GroupEnum.A3</option>
                    <option>@CourseLab.Data.UserManagement.GroupEnum.A4</option>
                    <option>@CourseLab.Data.UserManagement.GroupEnum.A5</option>
                    <option>@CourseLab.Data.UserManagement.GroupEnum.A6</option>
                    <option>@CourseLab.Data.UserManagement.GroupEnum.A7</option>
                    <option>@CourseLab.Data.UserManagement.GroupEnum.B1</option>
                    <option>@CourseLab.Data.UserManagement.GroupEnum.B2</option>
                    <option>@CourseLab.Data.UserManagement.GroupEnum.B3</option>
                    <option>@CourseLab.Data.UserManagement.GroupEnum.B4</option>
                    <option>@CourseLab.Data.UserManagement.GroupEnum.B5</option>
                    <option>@CourseLab.Data.UserManagement.GroupEnum.B6</option>
                    <option>@CourseLab.Data.UserManagement.GroupEnum.B7</option>
                    <option>@CourseLab.Data.UserManagement.GroupEnum.E1</option>
                    <option>@CourseLab.Data.UserManagement.GroupEnum.E2</option>
                    <option>@CourseLab.Data.UserManagement.GroupEnum.X</option>
                </select>
                <span asp-validation-for="Group" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <select asp-for="Group" class="form-control">
                    <option>@CourseLab.Data.UserManagement.YearEnum.I</option>
                    <option>@CourseLab.Data.UserManagement.YearEnum.II</option>
                    <option>@CourseLab.Data.UserManagement.YearEnum.III</option>
                    <option>@CourseLab.Data.UserManagement.YearEnum.Renumbered</option>
                </select>
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input type="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
